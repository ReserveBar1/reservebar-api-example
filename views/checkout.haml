%h3 Checkout
.checkout_info
  = @order_status.inspect

%form{action: "/address", method: 'post'}
  %input{type: 'hidden', name: 'token', value: @order_status['order']['token']}
  %input{type: 'hidden', name: 'number', value: @order_status['order']['number']}

  %label First Name
  %input{type: 'text', name: 'firstname'}
  %br
  %label Last Name
  %input{type: 'text', name: 'lastname'}
  %br
  %label Address
  %input{type: 'text', name: 'address1'}
  %br
  %label City
  %input{type: 'text', name: 'city'}
  %br
  %label Phone
  %input{type: 'text', name: 'phone'}
  %br
  %label Zip
  %input{type: 'text', name: 'zipcode'}
  %br
  %label State
  %input{type: 'text', name: 'state'}
  %label Over 21?
  %input{type: 'checkbox', name: 'is_legal_age'}
  %input{type: 'submit'}
